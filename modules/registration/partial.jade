.registration-page
  form(action='/registration', method='post')
    input(type='hidden', name='_csrf', value=csrf)
    .label First Name*:
    .input
      input(name='first_name', type='text', placeolder='First Name', required)
    .clear
    .label Last Name*:
    .input
      input(name='last_name', type='text', placeholder='Last Name', required)
    .clear
    .label Screen Name:
    .input.checkbox
      input(name='username', type='text')
      input(type="checkbox", name="use-fullname", class="checkbox")
      | Use full name
     .clear
    .label E-mail:
    .input
      input(name='email', type='email', placeholder='email@email.com', required)
    .clear
    .label Password:
    .input
      input(name='password', type='password', placeholder='Password (6 or more characters)', required)
    .clear
    .label Password (Confirm):
    .input
      input(name='password_confirm', type='password', placeholder='Re-enter password', required)
    .clear
    .label Gender:
    .input
      select(name='gender', required)
        option(value='Male') Male
        option(value='Female') Female
    .clear
    .label Date of birth*:
    .input
      input(name='dob', type='text', placeholder='DD/MM/YYYY', required)
    .clear
    .label Education:
    .input
      input(name='education', type='text', required)
    .clear
    .label Work:
    .input
      input(name='work', type='text', required)
    .clear
    .label Position:
    .input
      input(name='position', type='text', required)
    .clear
    .edit-photo
    .buttons
      input(type='submit', value='Save').save
      .cancel Cancel
      .clear

